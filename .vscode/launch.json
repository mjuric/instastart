    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
//            "program": "/epyc/ssd/users/mjuric/miniconda3/envs/lsd2/bin/pytest",
            "args": [
                "--no-cov",
                "tests/test_simple.py::test_intr[Signals.SIGKILL]"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "subProcess": true,
            "env": {
                "INSTA_TEST_PEXPECT_TIMEOUT": "0",
                "INSTA_LOG": "insta.log",
                "INSTA_TIMEOUT": "0"
            }
        },
        {
            "name": "Python: instatest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/instatest.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "subProcess": true,
            "env": {
                "INSTA_LOG": "insta.log",
                "INSTA_TIMEOUT": "0"
            }
            //            "args": [ ">", "foo.log", "2>&1", "<", "/dev/null" ]
        }
    ]
}